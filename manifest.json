{
  "manifest_version": 3,
  "name": "How Far",
  "version": "0.0.2",
  "description": "Calculates distances from selected locations to a default target location, like a workplace or nearby restaurant.",
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://fastapi.curator.atemkeng.eu/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "How Far"
  },
  "icons": {
    "16": "icon/icons8-user-location-48.png",
    "48": "icon/icons8-user-location-48.png",
    "128": "icon/icons8-user-location-96.png"
    
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src *;"
  }
}