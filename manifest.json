{
  "manifest_version": 3,
  "name": "Read Me",
  "version": "1.3.0",
  "description": "A Chrome extension that converts text to speech using an external API.",
  "permissions": ["storage", "contextMenus", "activeTab", "scripting", "tabs"],
  "host_permissions": [
    "http://45.94.111.107/*",
    "https://voice.cloud.atemkeng.de/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon/icons8-voice-recognition-48.png",
      "48": "icon/icons8-voice-recognition-48.png",
      "128": "icon/icons8-voice-recognition-96.png"
    }
  },
  "icons": {
    "16": "icon/icons8-voice-recognition-48.png",
    "32": "icon/icons8-voice-recognition-48.png",
    "48": "icon/icons8-voice-recognition-48.png",
    "128": "icon/icons8-voice-recognition-96.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
